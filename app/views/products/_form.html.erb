<%= form_for(obj) do |f| %>
  <% if obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(obj.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: "form-control", placeholder: "Enter the Summary here.",autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description,rows: 5, class: "form-control",placeholder: "Enter the Description here." %>
  </div>


  <div class="form-group">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>

     <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text} %>
     <% end %>
 </div>

 <div class="form-group">
   <%= f.submit "Submit",class: "btn btn-primary btn-lg" %>
 </div>
<% end %>
